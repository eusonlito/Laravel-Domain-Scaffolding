{
    "name": "project/app",
    "type": "project",
    "description": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "composer/composer": "^2.0",
        "doctrine/dbal": "^3.0",
        "eusonlito/disposable-email-validator": "^0.1",
        "eusonlito/laravel-meta": "^3.1",
        "eusonlito/laravel-packer": "^2.2",
        "friendsofphp/php-cs-fixer": "^2.18",
        "laravel/framework": "^8.7",
        "laravel/helpers": "^1.2",
        "predis/predis": "^1.1",
        "sentry/sentry-laravel": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "brianium/paratest": "^6.2",
        "facade/ignition": "^2.3",
        "fakerphp/faker": "^1.13",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.3",
        "phpstan/phpstan": "^0.12.75",
        "phpunit/phpunit": "^9.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "database/migrations"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        },
        "files": [
            "app/Services/Helper/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pre-install-cmd": [
            "@composer dump-autoload",
            "@composer artisan-cache-clear --ansi"
        ],

        "pre-update-cmd": [
            "@composer artisan-cache-clear --ansi"
        ],

        "post-install-cmd": [
            "@composer artisan-cache --ansi",
            "@php artisan queue:restart --ansi"
        ],

        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],

        "artisan-cache-clear": [
            "rm -f bootstrap/cache/*.php",
            "@php artisan cache:clear --ansi",
            "@php artisan config:clear --ansi",
            "@php artisan route:clear --ansi",
            "@php artisan view:clear --ansi"
        ],

        "artisan-cache": [
            "@php artisan optimize --ansi",
            "@php artisan view:cache --ansi"
        ],

        "develop-to-master": [
            "git push && git checkout master && git pull origin master && git merge develop --no-edit && git push origin master && git checkout develop"
        ],

        "deploy": [
            "@composer develop-to-master"
        ],

        "env-version": [
            "sed -i 's/CACHE_VERSION=.*/CACHE_VERSION='$(head -c 16 /dev/urandom | md5sum | head -c 32)'/' .env"
        ],

        "pull": [
            "git checkout .",
            "git pull",
            "@composer env-version --ansi",
            "@composer install --no-dev --optimize-autoloader --classmap-authoritative --ansi",
            "@php ./vendor/bin/php-cs-fixer fix --ansi",
            "@php artisan opcache:preload"
        ],

        "pull-lito": [
            "git pull",
            "@composer env-version --ansi",
            "@composer update --optimize-autoloader --classmap-authoritative --ansi",
            "@php ./vendor/bin/php-cs-fixer fix --ansi",
            "@php artisan opcache:preload",
            "@composer outdated -D --ansi"
        ],

        "quality": [
            "@php ./vendor/bin/phpstan analyse app --ansi"
        ],

        "refresh": [
            "@php artisan migrate:refresh --ansi",
            "@php artisan db:seed --class=Database\\\\Seeders\\\\Database --ansi",
            "@composer artisan-cache --ansi"
        ],

        "translation": [
            "@php artisan translation:fix --ansi",
            "@php artisan translation:fill --ansi",
            "@php artisan translation:clean --ansi"
        ]
    }
}
